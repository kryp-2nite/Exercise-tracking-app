<%- include('../partials/header') %>



<div class="padding">
<table>
  <thead>
      <th>Name</th>
      <th>Email</th>
      <th>Birth Date</th>
     

  </thead>
  <tbady>
      <% users.forEach(function(user) { %>
          <tr>
              <td class="spacing"><%= user.name %></td>
              <td class="spacing"><%= user.email %></td>
              <td class="spacing"><%= user.birthday %></td>
              <td><a href="/users/<%= user._id %>">DETAILS</a></td>
              <td>
                  <form action="/users/<%= user._id %>?_method=DELETE" method="POST" class="delete" >
                  <button type="submit">Delete</button>
              </form>
              </td>
              <td>
                <form action="/users/<%= user._id %>/update" method="GET" class="update">
                <button type="submit">Edit</button>
            </form>
            </td>
            
          </tr>

     <% }) %>
  </tbady>
</table>
</div>
    
<%- include('../partials/footer') %>